<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SIT313A2.OAuthLoginPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightYellow">
            <Label Text="Please log in to access the cloud functions of the app!"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
            <Button Text="Login Google OAuth" Clicked="OnLoginClicked" BackgroundColor="LightGreen" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>